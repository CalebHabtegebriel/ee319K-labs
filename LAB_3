;****************** main.s *************** 
; Program written by: ***Caleb Habtegebriel and Ennis**update this***
; Date Created: 2/4/2017
; Last Modified: 9/2/2019
; Brief description of the program
;   The LED toggles at 2 Hz and a varying duty-cycle
; Hardware connections (External: One button and one LED)
;  PE1 is Button input  (1 means pressed, 0 means not pressed)
;  PE2 is LED output (1 activates external LED on protoboard)
;  PF4 is builtin button SW1 on Launchpad (Internal) 
;        Negative Logic (0 means pressed, 1 means not pressed)
; Overall functionality of this system is to operate like this
;   1) Make PE2 an output and make PE1 and PF4 inputs.
;   2) The system starts with the the LED toggling at 2Hz,
;      which is 2 times per second with a duty-cycle of 30%.
;      Therefore, the LED is ON for 150ms and off for 350 ms.
;   3) When the button (PE1) is pressed-and-released increase
;      the duty cycle by 20% (modulo 100%). Therefore for each
;      press-and-release the duty cycle changes from 30% to 70% to 70%
;      to 90% to 10% to 30% so on
;   4) Implement a "breathing LED" when SW1 (PF4) on the Launchpad is pressed:
;      a) Be creative and play around with what "breathing" means.
;         An example of "breathing" is most computers power LED in sleep mode
;         (e.g., https://www.youtube.com/watch?v=ZT6siXyIjvQ).
;      b) When (PF4) is released while in breathing mode, resume blinking at 2Hz.
;         The duty cycle can either match the most recent duty-
;         cycle or reset to 30%.
;      TIP: debugging the breathing LED algorithm using the real board.
; PortE device registers
GPIO_PORTE_DATA_R  EQU 0x400243FC
GPIO_PORTE_DIR_R   EQU 0x40024400
GPIO_PORTE_AFSEL_R EQU 0x40024420
GPIO_PORTE_DEN_R   EQU 0x4002451C
; PortF device registers
GPIO_PORTF_DATA_R  EQU 0x400253FC
GPIO_PORTF_DIR_R   EQU 0x40025400
GPIO_PORTF_AFSEL_R EQU 0x40025420
GPIO_PORTF_PUR_R   EQU 0x40025510
GPIO_PORTF_DEN_R   EQU 0x4002551C
GPIO_PORTF_LOCK_R  EQU 0x40025520
GPIO_PORTF_CR_R    EQU 0x40025524
GPIO_LOCK_KEY      EQU 0x4C4F434B  ; Unlocks the GPIO_CR register
SYSCTL_RCGCGPIO_R  EQU 0x400FE608

DutyCycle_50 EQU 0x004C4B40			;5 million bus cycles (250 milliseconds)
DutyCycle_30 EQU 0x002DC6C0			;3 million bus cycles (150 milliseconds)
DutyCycle_70 EQU 0x006ACFC0			;7 million bus cycles (350 milliseconds)
DutyCycle_10 EQU 0x000F4240			;1 million bus cycles (50 milliseconds)
DutyCycle_90 EQU 0x00895440			;9 million bus cycles (450 milliseconds)
	
Counter_Variable EQU 0x00000000				;Declare counter variable

       IMPORT  TExaS_Init
       THUMB
       AREA    DATA, ALIGN=2
;global variables go here


       AREA    |.text|, CODE, READONLY, ALIGN=2
       THUMB
       EXPORT  Start
Start
 ; TExaS_Init sets bus clock at 80 MHz
     BL  TExaS_Init ; voltmeter, scope on PD3
	 
 ; Initialization goes here
	LDR R0, =SYSCTL_RCGCGPIO_R	;R0 = clock address 
	LDRB R1, [R0]				;R1 = clock data
	ORR R1, #0x10				;Turn on Port E clock
	STRB R1, [R0];				;Store back into mem
	NOP							;Time Delay
	NOP
	
	LDR R0, =GPIO_PORTF_LOCK_R	;R0 = Lock location
	LDR R1, =GPIO_LOCK_KEY		;R1 = Key
	STRB R1, [R0]				;Unlock dis boi	
	
	LDR R0, =GPIO_PORTE_DEN_R	;R0 = Port E pin enable address
	LDRB R1, [R0]				;R1 = pin enable data
	ORR R1, 0X03				;Enable pins 0 and 1
	STR R1, [R0]
	LDR R0, =GPIO_PORTF_DEN_R	;R0 = Port F pin enable address	
	LDRB R1, [R0]				;R1 = pin enable data
	ORR R1, 0X10				;Enable pin 4
	STR R1, [R0]
	
	LDR	R0, =GPIO_PORTE_DIR_R	;R0 = Port E direction address
	LDRB R1, [R0]				;R1 = direction data
	ORR R1, #0X04				;Pin 2 is output
	AND R1, #0XFB				;Pins 0&1&3-7 are inputs	DOUBLE CHECK THIS (overlap with ORR and AND)
	STRB R1, R0;				;Store into mem
	LDR R0, =GPIO_PORTF_DIR_R	;R0 = Port F direction address
	LDRB R1, [R0]				;R1 = direction data
	ORR R1, 0X10				;Pin 4 is output
	AND R1, 0XEF;				;Pins 0-3 & 5-7 are inputs
	STRB R1, [R0]				;store back into mem
	
	LDR R0, =GPIO_PORTE_AFSEL_R;
	LDRB R1, [R0];
	ORR R1, 0X01;
	STRB R1, [R0];
	LDR R0, =GPIO_PORTF_AFSEL_R;
	LDRB R1, [R0];
	ORR R1, 0X01;
	STRB R1, [R0];


	LDR R0, =GPIO_PORTF_CR_R;
	LDRB R1, [R0];
	ORR R1, 0X10;
	STRB R1, [R0];
	LDR R0, =GPIO_PORTF_PUR_R;
	LDRB R1, [R0];
	ORR R1, 0X10;
	STRB R1, [R0];
	




     CPSIE  I    ; TExaS voltmeter, scope runs on interrupts
loop  
; main engine goes here

			
			LDR R4, =Counter_Variable 			;Loading counter value on R4 (R4 strictly for counter)
Repeat_Process	
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Port E data address
			LDR R1, [R0]				;R1 = Port E data
			LSR R1, #1					;Put button data into LSB
			AND R1, R1, #1				;Check to see if pressed (1=on, 0=off)
			BNE Check_Counter			;If 1, check counter subroutine, if not, check second button below
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put button data into LSB
			AND R1, R1, #1				;Check to see if pressed (1=on, 0=off)
			BNE Repeat_Process			;If not on, loop
			B Breath					;If on, go to breath subroutine

Check_Counter		
			CMP R4, #0  				;checking if counter has been used (if it's first time then it would be 0)
			BEQ duty30					;it it's first time go to duty 30
			CMP R4, #1  
			BEQ duty50
			CMP R4, #2 
			BEQ duty70
			CMP R4, #3 
			BEQ duty70
			CMP R4, #4 
			BEQ duty90
			CMP R4, #5
			AND R4, R4, #0				;If counter = 5, reset counter
			BEQ duty10


;;;;;;;;;;;;;;;;;;;;;;;;;;SUBROUTINES HERE;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; LD Delay variable(in cycles) = (duty-cycle in milliseconds)/[(4 bus cycles)*(12.5 nanoseconds per bus cycle)]

duty30
			LDR R0, =DutyCycle_30		;R0 = # bus cycles for 0.15 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Loop30_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop30_ON				;If not 0, repeat

			LDR R0, =DutyCycle_70		;R0 = # bus cycles for 0.35 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
						
						;Bottom reisstor prevesnts floating values 
Loop30_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop30_OFF				;If not 0, repeat
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F data address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put input into LSB
			BIC R1, #1					;Clear all bits except for input which is in LSB
			ADD R1, #-1					;Check to see if Breath button is on
			BNE skip					;If on (was 0 previously now -1), skip these steps
			
			;If button 2 is not on,
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Address of Port E data
			LDR R1, [R0]				;R1 = Port E data
			BIC R1, #2					;Clear all bits but input
			LSR R1, #1					;Put into LSB
			ADD R1, #-1					;See if it is on or off
			BEQ duty30					;If still on, stay blinking
			
			;If off, exit this duty cycle
			ADD R4, #1					;Increment counter
			B loop
			
skip		ADD R4, #1					;Add 1 to counter
			B	Breath					;If on, jump to that subroutine

duty50
			LDR R0, =DutyCycle_50		;R0 = # bus cycles for 0.25 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Loop50_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop50_ON				;If not 0, repeat

			LDR R0, =DutyCycle_50		;R0 = # bus cycles for 0.25 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
			
Loop50_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop50_OFF				;If not 0, repeat
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F data address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put input into LSB
			BIC R1, #1					;Clear all bits except for input which is in LSB
			ADD R1, #-1					;Check to see if Breath button is on
			BNE skip2					;If on (was 0 previously now -1), skip these steps
			
			;If button 2 is not on,
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Address of Port E data
			LDR R1, [R0]				;R1 = Port E data
			BIC R1, #2					;Clear all bits but input
			LSR R1, #1					;Put into LSB
			ADD R1, #-1					;See if it is on or off
			BEQ duty50					;If still on, stay blinking
			
			;If off, exit this duty cycle
			ADD R4, #1					;Increment counter
			B loop
			
skip2		ADD R4, #1					;Add 1 to counter
			B	Breath					;If on, jump to that subroutine
			
duty70
			LDR R0, =DutyCycle_70		;R0 = # bus cycles for 0.35 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Loop70_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop70_ON				;If not 0, repeat

			LDR R0, =DutyCycle_30		;R0 = # bus cycles for 0.15 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
			
Loop70_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop70_OFF				;If not 0, repeat
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F data address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put input into LSB
			BIC R1, #1					;Clear all bits except for input which is in LSB
			ADD R1, #-1					;Check to see if Breath button is on
			BNE skip3					;If on (was 0 previously now -1), skip these steps
			
			;If button 2 is not on,
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Address of Port E data
			LDR R1, [R0]				;R1 = Port E data
			BIC R1, #2					;Clear all bits but input
			LSR R1, #1					;Put into LSB
			ADD R1, #-1					;See if it is on or off
			BEQ duty70					;If still on, stay blinking
			
			;If off, exit this duty cycle
			ADD R4, #1					;Increment counter
			B loop
			
skip3		ADD R4, #1					;Add 1 to counter
			B	Breath					;If on, jump to that subroutine

duty90
			LDR R0, =DutyCycle_90		;R0 = # bus cycles for 0.15 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Loop90_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop90_ON				;If not 0, repeat

			LDR R0, =DutyCycle_10		;R0 = # bus cycles for 0.35 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
			
Loop90_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop90_OFF				;If not 0, repeat
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F data address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put input into LSB
			BIC R1, #1					;Clear all bits except for input which is in LSB
			ADD R1, #-1					;Check to see if Breath button is on
			BNE skip4					;If on (was 0 previously now -1), skip these steps
			
			;If button 2 is not on,
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Address of Port E data
			LDR R1, [R0]				;R1 = Port E data
			BIC R1, #2					;Clear all bits but input
			LSR R1, #1					;Put into LSB
			ADD R1, #-1					;See if it is on or off
			BEQ duty90					;If still on, stay blinking
			
			;If off, exit this duty cycle
			ADD R4, #1					;Increment counter
			B loop
			
skip4		ADD R4, #1					;Add 1 to counter
			B	Breath					;If on, jump to that subroutine

duty10
			LDR R0, =DutyCycle_10		;R0 = # bus cycles for 0.05 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Loop10_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop10_ON				;If not 0, repeat

			LDR R0, =DutyCycle_90		;R0 = # bus cycles for 0.45 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
			
Loop10_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Loop10_OFF				;If not 0, repeat
			
			LDR R0, =GPIO_PORTF_DATA_R	;R0 = Port F data address
			LDR R1, [R0]				;R1 = Port F data
			LSR R1, #4					;Put input into LSB
			BIC R1, #1					;Clear all bits except for input which is in LSB
			ADD R1, #-1					;Check to see if Breath button is on
			BNE skip5					;If on (was 0 previously now -1), skip these steps
			
			;If button 2 is not on,
			LDR R0, =GPIO_PORTE_DATA_R	;R0 = Address of Port E data
			LDR R1, [R0]				;R1 = Port E data
			BIC R1, #2					;Clear all bits but input
			LSR R1, #1					;Put into LSB
			ADD R1, #-1					;See if it is on or off
			BEQ duty10					;If still on, stay blinking
			
			;If off, exit this duty cycle
			ADD R4, #1					;Increment counter
			B loop
			
skip5		ADD R4, R4, #1				;Add 1 to counter
			B	Breath					;If on, jump to that subroutine
	
BREATH
			LDR R0, =DutyCycle_30		;R0 = # bus cycles for 0.15 seconds
			LDR R1, =GPIO_PORTE_DATA_R	;R1 = Port E data address
			LDR R2, [R1]				;R2 = Port E data
			ORR R2, #0x04				;Turn PE2 on
			STR R2, [R1]				;Store back into mem
			
Breath30_ON	SUBS R0, R0, #0x01			;Subtract 1
			BNE Breath30_ON				;If not 0, repeat

			LDR R0, =DutyCycle_70		;R0 = # bus cycles for 0.35 seconds
			BIC R2, #0x04				;Turn PE2 off
			STR R2, [R1]				;Store into mem
						
						;Bottom reisstor prevesnts floating values 
Breath30_OFF	SUBS R0, R0, #0x01			;Subtract 1
			BNE Breath30_OFF				;If not 0, repeat
      
     ALIGN      ; make sure the end of this section is aligned
     END        ; end of file
